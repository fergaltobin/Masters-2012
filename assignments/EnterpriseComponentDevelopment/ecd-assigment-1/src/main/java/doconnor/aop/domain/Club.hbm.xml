<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="doconnor.aop.domain" >

    <class name="Club" table="CLUB">
          <id name="id" column="clid" type="long">
                 <generator class="increment"/>
           </id>
           <property name="name" length="23"/>

           <set name="players" 
              		 inverse="false" 
              		 cascade="save-update">
               	<key column="playsFor"/>
               	<one-to-many class="Player" />
            </set>

            <set name="sponsors" table="CLUBSPONSORS">
               	<key column="clid"/>
               	<many-to-many class="Company" column="coid" />
            </set>
             
    </class>
</hibernate-mapping>