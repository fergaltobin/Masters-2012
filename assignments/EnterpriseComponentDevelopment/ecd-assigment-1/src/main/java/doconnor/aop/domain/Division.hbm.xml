<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="doconnor.aop.domain" >

    <class name="Division" table="DIVISION">
          <id name="id" column="did" type="long">
                 <generator class="increment"/>
           </id>
           <property name="name" length="23"/>
			<set name="members"	cascade="save-update, delete" >
		    	<key column="division"    not-null="true" />
		    	<one-to-many class="Club"/>
			</set>
    </class>
</hibernate-mapping>